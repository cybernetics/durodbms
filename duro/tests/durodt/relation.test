#!/bin/sh
# Execute tclsh from the user's PATH \
exec tclsh "$0" ${1+"$@"}

# $Id$
#
# Test scalar definitions and operations
#

package require tcltest 2.2
eval ::tcltest::configure $argv
namespace import ::tcltest::*

set testdir [::tcltest::configure -testdir]

set ::SETUP {
    file delete -force dbenv
    exec $testdir/../../dli/durodt << {
        create_env('dbenv');
        create_db('D');
    }
}

test insert {creating relvar and inserting tuples} -setup $SETUP -body {
    exec $testdir/../../dli/durodt << {
        connect('', 'dbenv');
        current_db := 'D';

        begin transaction;
        var r real relation {i integer, d double, c string}
             key {i};
        insert r relation {tuple {i 1, d 1.0, c 'X'}, tuple {i 2, d 1.1, c 'Y'}};

        var t init tuple {i 3, d 1.0, c 'Z'};
        insert r t; 

        println(string(count(r)));
        println((tuple from r where i=2).c);
        commit;
    }
} -result {3
Y
}

cleanupTests
